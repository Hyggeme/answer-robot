{
  "name": "ai-chat",
  "version": "1.0.0",
  "description": "Application Sample Template",
  "packageManager": "pnpm@7.1.0",
  "scripts": {
    "gen": "node ./scripts/gen/index.js",
    "precommit-msg": "echo 'ðŸš§ start pre-commit checks ...' && exit 0",
    "prettier": "node ./scripts/selfCloseInputTag.js && prettier --write \"src/**/*.{ux,js,json,less,scss,css,pcss,md,vue}\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/runtime": "^7.12.5",
    "@types/quickapp": "npm:quickapp-interface@^1.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "colors": "^1.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "prettier-plugin-ux": "^0.3.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 80,
    "proseWrap": "never",
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit-msg && lint-staged"
    }
  },
  "lint-staged": {
    "**/**.{ux,js,json,less,scss,css,pcss,md,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
